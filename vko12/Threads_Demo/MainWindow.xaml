<Window x:Class="Threads_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Threads_Demo"
        mc:Ignorable="d"
        Title="Simple Thread Demo" Height="350" Width="525">
    <Grid>
        <StackPanel>
        <Button x:Name="btnWork" Content="Do Long Work" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="98" Click="btnWork_Click"/>
        <Button x:Name="btnFire" Content="Fire!" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="98" Click="btnFire_Click"/>
        <TextBox x:Name="txtMessage" HorizontalAlignment="Left" Height="23" Margin="5" TextWrapping="Wrap" Text="[Message comes here]" VerticalAlignment="Top" Width="236"/>
        </StackPanel>
    </Grid>
</Window>
